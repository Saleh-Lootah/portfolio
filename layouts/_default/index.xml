<rss version="2.0">
    <channel>
        <title>{{ .Site.Title }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ .Site.Params.description }}</description>
        <language>en-us</language>
        {{ range .Pages }}
        <item>
            <title>{{ .Title }}</title>
            <link>{{ .Permalink }}</link>
            <description>{{ .Summary }}</description>
            <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
            <guid>{{ .Permalink }}</guid>
        </item>
        {{ end }}
    </channel>
</rss>
